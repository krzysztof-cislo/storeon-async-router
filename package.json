{
  "name": "storeon-async-router",
  "version": "0.3.2",
  "description": "Asynchronous router for [Storeon]",
  "repository": {
    "type": "git",
    "url": "https://github.com/majo44/storeon-async-router.git"
  },
  "bugs": "https://github.com/majo44/storeon-async-router/issues",
  "keywords": [
    "storeon",
    "router",
    "navigation",
    "routing",
    "hook"
  ],
  "main": "./umd/index.js",
  "module": "./index.js",
  "types": "./index.d.ts",
  "author": {
    "email": "majo44@gmail.com",
    "name": "Pawel Majewski"
  },
  "contributors": [
    {
      "email": "majo44@gmail.com",
      "name": "Pawel Majewski"
    }
  ],
  "license": "MIT",
  "peerDependencies": {
    "storeon": "^0.9.3"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/sinon": "^7.0.12",
    "@types/sinon-chai": "^3.2.2",
    "abortcontroller-polyfill": "^1.3.0",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "husky": "^2.3.0",
    "mocha": "^6.1.4",
    "node-fetch": "^2.6.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.3.0",
    "size-limit": "^1.3.5",
    "source-map-support": "^0.5.12",
    "storeon": "^0.9.3",
    "ts-node": "^8.2.0",
    "tslib": "^1.10.0",
    "typedoc": "^0.14.2",
    "typescript": "^3.6.3"
  },
  "scripts": {
    "size": "size-limit",
    "build": "run-s size lint test compile docs",
    "compile": "tsc --module umd --target es5 --outDir umd --allowJs true index.js",
    "docs": "typedoc --theme minimal --includeDeclarations --excludeExternals --out docs --exclude \"node_modules/**/*\" index.d.ts",
    "test": "nyc mocha",
    "lint": "run-s lint:*",
    "lint:types": "tsc",
    "lint:eslint": "eslint \"index.js\"",
    "format:eslint": "eslint \"index.js\" --fix"
  },
  "size-limit": [
    {
      "limit": "1111 B",
      "path": "index.js"
    }
  ],
  "nyc": {
    "include": [
      "index.js"
    ],
    "extension": [
      ".js"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "branches": 100,
    "lines": 100,
    "functions": 100,
    "statements": 100,
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run build"
    }
  }
}
